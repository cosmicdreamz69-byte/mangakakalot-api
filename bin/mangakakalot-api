#!/usr/bin/env node

/**
 * CLI tool to start the MangaKakalot API server
 * This creates and starts an Express server using the library
 */

const mangakakalotApi = require('../index');

console.log('ðŸš€ Starting MangaKakalot API server...');
console.log(`ðŸ“¦ Package: mangakakalot-api v${mangakakalotApi.version}`);
console.log('ðŸŒ For API documentation, visit: https://github.com/shafat-96/mangakakalot-api\n');

// Create Express server using the library
const app = mangakakalotApi.createServer();
const PORT = process.env.PORT || 3000;

// Start the server
const server = app.listen(PORT, () => {
  console.log(`ðŸš€ MangaKakalot API is running on port ${PORT}`);
  console.log(`ðŸ“– Available endpoints:`);
  console.log(`   GET /api/manga/search/:query?/:page?`);
  console.log(`   GET /api/manga/details/:id`);
  console.log(`   GET /api/manga/read/:mangaId?/:chapterId?`);
  console.log(`   GET /api/manga/latest/:page?`);
  console.log(`   GET /api/manga/popular/:page?`);
  console.log(`   GET /api/manga/newest/:page?`);
  console.log(`   GET /api/manga/completed/:page?`);
  console.log(`   GET /api/manga/popular-now`);
  console.log(`   GET /api/manga/home`);
  console.log(`ðŸŒ Visit: http://localhost:${PORT}`);
});

// Handle graceful shutdown
process.on('SIGINT', () => {
  console.log('\nðŸ›‘ Shutting down MangaKakalot API server...');
  server.close(() => {
    console.log('âœ… Server stopped gracefully');
    process.exit(0);
  });
});

process.on('SIGTERM', () => {
  console.log('\nðŸ›‘ Shutting down MangaKakalot API server...');
  server.close(() => {
    console.log('âœ… Server stopped gracefully');
    process.exit(0);
  });
});

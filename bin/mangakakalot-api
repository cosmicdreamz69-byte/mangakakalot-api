#!/usr/bin/env node

const express = require('express');
const cors = require('cors');
const mangaRoutes = require('../routes/mangakakalotroutes.js'); // Corrected path
const { version } = require('../package.json');

const app = express();
const PORT = process.env.PORT || 3000;

console.log('🚀 Starting MangaKakalot API server...');
console.log(`📦 Package: mangakakalot-api v${version}`);
console.log('🌐 For API documentation, visit: https://github.com/shafat-96/mangakakalot-api\n');

app.use(cors());
app.use(express.json());
app.use('/', mangaRoutes);

app.listen(PORT, () => {
  console.log(`✅ Server is live and listening on port ${PORT}`);
  console.log(`🔗 Access the API at http://localhost:${PORT}`);
});
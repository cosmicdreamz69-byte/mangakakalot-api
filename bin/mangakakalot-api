#!/usr/bin/env node

const path = require('path');
const express = require('express');
const cors = require('cors');

// Import the main app
const app = express();
const PORT = process.env.PORT || 3000;

// Import routes
const mangaKakalotRoutes = require('../routes/mangakakalotroutes');

// Middleware
app.use(cors({
  origin: '*',
  methods: ['GET', 'POST', 'PUT', 'DELETE', 'OPTIONS'],
  allowedHeaders: ['Content-Type', 'Authorization']
}));

app.use(express.json());

// Health check endpoint
app.get('/', (req, res) => {
  res.json({ 
    status: 'ok', 
    message: 'MangaKakalot API is running',
    version: require('../package.json').version
  });
});

// Routes
app.use('/api/manga', mangaKakalotRoutes);

// Error handling middleware
app.use((err, req, res, next) => {
  console.error(err.stack);
  res.status(500).json({ error: 'Something went wrong!' });
});

// 404 handler
app.use((req, res) => {
  res.status(404).json({ error: 'Route not found' });
});

// Start server
app.listen(PORT, () => {
  console.log(`ğŸš€ MangaKakalot API is running on port ${PORT}`);
  console.log(`ğŸ“– Available endpoints:`);
  console.log(`   GET /api/manga/search/:query?/:page?`);
  console.log(`   GET /api/manga/details/:id`);
  console.log(`   GET /api/manga/read/:mangaId?/:chapterId?`);
  console.log(`   GET /api/manga/latest/:page?`);
  console.log(`   GET /api/manga/popular/:page?`);
  console.log(`   GET /api/manga/newest/:page?`);
  console.log(`   GET /api/manga/completed/:page?`);
  console.log(`   GET /api/manga/popular-now`);
  console.log(`   GET /api/manga/home`);
  console.log(`ğŸŒ Visit: http://localhost:${PORT}`);
});
